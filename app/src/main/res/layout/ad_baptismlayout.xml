<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:clickable="true"
    android:background="@android:color/holo_purple"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="243dp">

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Baptism Date: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ShowDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/Date"
            android:layout_toRightOf="@+id/Date"
            android:gravity="center"
            android:text="Show Date"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Date"
            android:gravity="center"
            android:text="Starttime: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ShowTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="29dp"
            android:layout_toEndOf="@+id/Starttime"
            android:layout_toRightOf="@+id/Starttime"
            android:gravity="center"
            android:text="Show time"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Starttime"
            android:gravity="center"
            android:text="Baptism Venue: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ShowVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="57dp"
            android:layout_toEndOf="@+id/Venue"
            android:layout_toRightOf="@+id/Venue"
            android:gravity="center"
            android:text="Show venue"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Celebrant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Venue"
            android:gravity="center"
            android:text="Main Celebrant: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ShowCelebrant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="83dp"
            android:layout_toEndOf="@+id/Celebrant"
            android:layout_toRightOf="@+id/Celebrant"
            android:gravity="center"
            android:text="Show venue"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Intention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Celebrant"
            android:gravity="center"
            android:text="Mass Intention: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ShowIntention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="108dp"
            android:layout_toEndOf="@+id/Intention"
            android:layout_toRightOf="@+id/Intention"
            android:gravity="center"
            android:text="Show intention"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Intention"
            android:gravity="center"
            android:text="Baptism Group: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ShowGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="134dp"
            android:layout_toEndOf="@+id/Group"
            android:layout_toRightOf="@+id/Group"
            android:gravity="center"
            android:text="Show group"
            android:textColor="#000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Delete"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/Group"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="15dp" />

    </RelativeLayout>


    </androidx.cardview.widget.CardView>