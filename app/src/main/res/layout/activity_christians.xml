<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Christianspackage.Christians">

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="46dp"
            android:textSize="20dp"
            android:text="Welcome to Scheduler App !"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.272"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.165" />

    <TextView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hello"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp"
        android:text="Click the buttons to view the upcoming  events"
        android:textSize="20dp" />



    <Button
            android:id="@+id/wedding"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="10dp"
            android:padding="12dp"
            android:layout_below="@+id/search"
            android:textColor="@android:color/black"
        android:background="@android:color/holo_blue_bright"
            android:text="wedding events"/>
        <Button
            android:id="@+id/baptism"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="10dp"
            android:padding="12dp"
            android:layout_below="@+id/wedding"
            android:background="@android:color/holo_blue_bright"
            android:textColor="@android:color/black"
            android:text="Baptism ceremonies"/>
        <Button
            android:id="@+id/funeral"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="10dp"
            android:padding="12dp"
            android:layout_below="@+id/baptism"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_blue_bright"
            android:text="funeral events"/>



        <Button
            android:id="@+id/adoration"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="10dp"
            android:padding="12dp"
            android:layout_below="@+id/funeral"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_blue_bright"
            android:text="Eucharistic adoration"/>

    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adoration"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:text="sign out"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />



</RelativeLayout>
</ScrollView>