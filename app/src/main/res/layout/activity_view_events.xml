<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.ViewEvents">
    <RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:text="Welcome to Church events scheduling and Management App !"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165" />

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hello"
        android:layout_alignParentTop="true"
        android:layout_marginTop="79dp"
        android:text="Click to view the scheduled events!"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165" />
    <Button
        android:id="@+id/R_wedding"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_blue_bright"
        android:padding="12dp"
        android:text="Wedding upcoming events"
        android:textColor="@android:color/black" />
    <Button
        android:id="@+id/R_funeral"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/R_wedding"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_blue_bright"
        android:padding="12dp"
        android:text="Funeral events"
        android:textColor="@android:color/black" />
    <Button
        android:id="@+id/R_Adoration"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/R_funeral"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_blue_bright"
        android:padding="12dp"
        android:text="Adoration events"
        android:textColor="@android:color/black" />
        <Button
            android:id="@+id/R_baptism"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R_Adoration"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_blue_bright"
            android:padding="12dp"
            android:text="Baptism"
            android:textColor="@android:color/black" />
    <Button
        android:id="@+id/btn_signout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/R_baptism"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:text="sign out"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />

    </RelativeLayout>
</ScrollView>